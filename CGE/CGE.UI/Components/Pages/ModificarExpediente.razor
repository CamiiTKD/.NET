    <div class="form-group">
        <input type="text" placeholder="Caratula" @bind="caratula" class="form-control">
    </div>
    <div class="form-group">
        <select @bind="tipo">
            @foreach(var tipo in Enum.GetValues(typeof(EstadoExpediente)))
            {
                <option value="@tipo">@tipo.ToString()</option>
            }
        </select>
    </div>
    <div class="advertencia">
