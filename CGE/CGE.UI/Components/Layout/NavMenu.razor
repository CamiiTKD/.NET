@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@inject ProtectedSessionStorage sessionStorage
@inject IJSRuntime JSRuntime

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">SeminarioApp</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        @if (shouldDisplay) {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="listadousuarios">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Usuarios
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="listadoexpedientes">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Expedientes
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="listadotramites">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Tramites
                </NavLink>
            </div>
            @if (shouldDisplayUser) {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="listadomisexpedientes">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Mis Expedientes
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="listadomistramites">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Mis Tramites
                    </NavLink>
                </div>
            }
        }
    </nav>
</div>

@code{
    private bool shouldDisplay = false;
    private bool shouldDisplayUser = false;
    protected override async Task OnAfterRenderAsync(bool firstRender) {
        if(firstRender){
            var result  = await sessionStorage.GetAsync<bool>("esAdmin");
            if (result.Success ? result.Value : false){
                shouldDisplay = true;
            }
            var result2 = await sessionStorage.GetAsync<int>("userId");
            if((result2.Success ? result2.Value : 0) != 0){
                shouldDisplayUser = true;
            }
        }
    }
}